  .hist-topic { padding: var(--space-4) 0 var(--space-6); scroll-margin-top: 80px; }
  .hist-topic-header { position: relative; border-radius: 20px; padding: var(--space-5) var(--space-6); margin-bottom: var(--space-5); overflow: hidden; }
  .hist-topic-header-inner { position: relative; z-index: 1; display: flex; align-items: center; gap: var(--space-3); flex-wrap: wrap; }
