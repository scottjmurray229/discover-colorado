  .hist-hero-meta-value { font-size: 1.1rem; font-weight: var(--weight-bold); color: #fff; }

  .hist-scroll-hint {
    position: absolute; bottom: 16px; right: var(--space-6); z-index: 3;
    font-size: 0.65rem; text-transform: uppercase; letter-spacing: 0.15em;
    color: rgba(255, 255, 255, 0.35); text-align: center;
    animation: histBounce 2s ease-in-out infinite;
  }
  @keyframes histBounce { 0%, 100% { transform: translateY(0); } 50% { transform: translateY(6px); } }

  .hist-personal { padding-block: var(--space-8); }
  .hist-personal-quote {
    max-width: 680px; margin: 0 auto; padding: var(--space-6) var(--space-8);
    border-left: 4px solid var(--color-warm-coral); background: var(--color-sky); border-radius: 0 12px 12px 0;
  }
  .hist-personal-quote p { font-size: var(--text-body); color: var(--color-heading); line-height: var(--leading-body); font-style: italic; margin-bottom: var(--space-3); }
  .hist-personal-quote cite { font-size: var(--text-caption); color: var(--color-warm-coral); font-weight: var(--weight-semibold); font-style: normal; }

  .hist-quicknav { padding: 0 0 var(--space-6); }
  .hist-quicknav-grid { display: flex; justify-content: center; gap: var(--space-2); flex-wrap: wrap; }
  .hist-quicknav-chip {
    display: inline-flex; align-items: center; gap: 6px; padding: 8px 16px;
    background: var(--color-white); border: 1px solid rgba(0, 0, 0, 0.08); border-radius: 40px;
    font-size: 0.8rem; font-weight: var(--weight-medium); color: var(--color-slate); text-decoration: none;
    transition: background 0.2s ease, color 0.2s ease, transform 0.2s ease;
  }
